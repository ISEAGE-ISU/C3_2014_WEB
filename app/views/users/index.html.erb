<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Poster</th>
    <th>Moderator</th>
    <th>Administrator</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.poster %></td>
    <td><%= user.moderator %></td>
    <td><%= user.administrator %></td>
    <td><%= link_to 'Show', user %></td>
    <% if session[:user_id].to_i != 0 and (session[:user_id] == user.id or User.find(session[:user_id]).administrator) %>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

